<core:View
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="realmz.ui5.controller.Realmz"
  xmlns:tnt="sap.tnt"
  xmlns:html="http://www.w3.org/1999/xhtml"
>
  <Page title="Realmz">
  <!-- Stats Bar -->
    <tnt:ToolHeader>
      <Button
        text="Economy"
        type="Transparent"
        press=""
      />
      <Button
        text="Warfare"
        type="Transparent"
        press=""
      />
      <Button
        text="Science"
        type="Transparent"
        press=""
      />
      <Button
        text="Espionage"
        type="Transparent"
        press=""
      />
      <ToolbarSpacer />
      <Button
        id="player"
        text="Unknown Player"
        type="Transparent"
        press="onUserNamePress"
      >
        <layoutData>
          <OverflowToolbarLayoutData
            priority="NeverOverflow" />
        </layoutData>
      </Button>
    </tnt:ToolHeader>
    <!--  Stats Footer -->
    <footer>
      <OverflowToolbar
        id="realmzFooter"
      >
        <core:Icon
          src="sap-icon://family-care"
          tooltip="Population" />
        <Text
          type="Number"
          text="{kingdom>/population}" />
        <core:Icon
          src="sap-icon://nutrition-activity"
          tooltip="Food" />
        <Text
          type="Number"
          text="{kingdom>/food}" />
        <core:Icon
          src="sap-icon://lead"
          tooltip="Gold" />
        <Text
          type="Number"
          text="{kingdom>/gold}" />
        <core:Icon
          src="sap-icon://lab"
          tooltip="Science" />
        <Text
          type="Number"
          text="{kingdom>/scientist}" />
        <core:Icon
          src="sap-icon://search"
          tooltip="Intelligence" />
        <Text
          type="Number"
          text="{kingdom>/intel}" />
        <ToolbarSpacer />
        <core:Icon
          src="sap-icon://calendar"
          tooltip="Date" />
        <Text
          type="Date"
          text="01.01.1000"
          id="date" />
        <core:Icon
          src="sap-icon://compare"
          tooltip="Turn" />
        <Text
          type="Int"
          text="1"
          id="turn" />
        <Button
          text="End Turn"
          icon="sap-icon://lateness"
          press="onNextTurn" />
      </OverflowToolbar>
    </footer>
  </Page>
</core:View>